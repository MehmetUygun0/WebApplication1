@page
@model BulkyRazor_Temp.Pages.Categories.IndexModel
<div class="container">
		<div class="row pt-4 pb-3">
			<div class="col-6"><h2 class="text-primary">Category List</h2></div>
		<div class="col-6 text-end">
			<a asp-page="/Categories/create" a class="btn btn-primary">
				YENİ KATOGARİİ OLLUSTURR
			</a>
		</div>
		</div>
<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>Category Name</th>
		<th>Category Order</th>

	</tr>
	</thead>
	<tbody>
		@foreach(var obj in Model.CategoryList.OrderBy(u=>u.DiplayOrder))
		{
		<tr>
			<td>@obj.Name</td>
			<td>@obj.DiplayOrder</td>
			<td>
				<div>
							<a asp-page="/categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
					EDİT
				</a>
							<a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
					DELETE
				</a>
				</div
			></td>
		</tr>
		}
	</tbody>
</table>
</div>
